@using (Html.BeginForm("SaveDocumentInfo", "FileUpload", FormMethod.Post, new { id = "EditDocumentInfoForm", @class = "form-horizontal" }))
{ 
    <div class="well well-small">
        <table cellspacing="0" cellpadding="0" width='100%'>
            <tbody>
                <tr>
                    <td>
                        <b class="rnd"><b class="rnd1"></b><b class="rnd2"></b></b>
                    </td>
                </tr>
            </tbody>
        </table>
        <div class="row ">
            <div class="span8">
                <input type="file" id="file_upload" name="file_upload" />
                <div id="DivQueue">
                </div>
                <button type="button" onclick="upload();" class="btn btn-primary start" id="btUpload"
                    style="display: none">
                    <i class="icon-upload icon-white"></i><span title="Upload All">上传</span>
                </button>
                <button type="reset" onclick="CanleAll();" class="btn btn-warning cancel" id="btCancel"
                    style="display: none">
                    <i class="icon-ban-circle icon-white"></i><span title="Cancel All">取消</span>
                </button>
            </div>
        </div>
        <div id="result">
        </div>

    </div>
}
<script type="text/javascript">
    var uploaderurl = '@Url.Action("ImportDoc", "FileUpload")';
    var swfurl = '@Url.Content("~/Content/uploadify.swf")';
    $(function () {
        InitDocUploadify();
    });

    //上传
    function upload() {

            $('#file_upload').uploadify('upload', '*');
            $("#btUpload").show();
            $("#btCancel").show();
        
    }
    //取消所有
    function CanleAll() {
        $('#file_upload').uploadify('cancel', '*');
        $("#btUpload").hide();
        $("#btCancel").hide();
        $("#ddlOrg").val("");
        $("#ddlOrg").trigger("liszt:updated");
        //        $("#ddlDocClassCode").val("");
        //        $("#ddlDocClassCode").trigger("liszt:updated");
    }
    $("#tbRemark").focus();
</script>
